RewriteEngine On

# Backend - não processar
RewriteCond %{REQUEST_URI} ^/backend
RewriteRule ^ - [L]

# Assets estáticos - servir diretamente se existem
RewriteCond %{REQUEST_URI} ^/(assets|favicon|logocheck|placeholder|robots)
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

# Arquivo físico existe - servir diretamente
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

# Diretório físico existe - servir diretamente
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# TUDO mais (rotas SPA) - usar index.php que serve index.html
RewriteRule ^(.*)$ /index.php [L]
